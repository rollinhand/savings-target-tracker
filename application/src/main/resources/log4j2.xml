<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ISO8601} [%t] %-5p %c %x - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="org.apache.openjpa" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="openjpa.Runtime" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="openjpa.Tool" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="openjpa.Enhance" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>